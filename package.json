{
  "name": "lifelog",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build && cp build/server/index.js build/client/_worker.js",
    "start": "wrangler pages dev ./build/client",
    "deploy": "wrangler pages deploy ./build/client",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply lifelog-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply lifelog-db --remote",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@react-router/cloudflare": "^7.1.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "isbot": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@react-router/dev": "^7.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "drizzle-kit": "^0.30.0",
    "miniflare": "^3.20241230.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.99.0"
  }
}
